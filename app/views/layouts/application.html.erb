<!DOCTYPE html>
<html>
  <head>
    <%= display_meta_tags title: @page_title, description: @page_description, keywords: @page_keywords %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
  
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= render 'include/main/top_header' %>
    <%= render 'include/main/notifications' %>
      <div class="logo">
        <%= link_to root_path do %>
          <h1>Luxury Watches</h1>
        <% end %>
      </div>

    <%= render 'include/main/bottom_header' %>

    <div class="content">
      <%= yield %>
    </div>

    <%= render 'include/main/footer' %>
  </body>
</html>
